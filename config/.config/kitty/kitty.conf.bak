# Aesthetic mappings
font_size 12.0
font_family Fira Code
# active_border_color #d6e9ff
enable_audio_bell no

map alt+page_up change_font_size all +2.0
map alt+page_down change_font_size all -2.0

# Window mappings
map alt+shift+enter new_window_with_cwd
map alt+shift+t new_tab_with_cwd
map alt+j neighboring_window down
map alt+k neighboring_window up
map alt+h neighboring_window left
map alt+l neighboring_window right
map alt+shift+j layout_action rotate
map alt+shift+j layout_action rotate
map alt+shift+k move_window up
map alt+shift+h move_window left
map alt+shift+l move_window right

#  Tab mappings
map ctrl+tab next_tab
map ctrl+shift+tab previous_tab

# Window layout
enabled_layouts splits, horizontal, vertical
map shift+up move_window up
map shift+left move_window left
map shift+right move_window right
map shift+down move_window down

# BEGIN_KITTY_THEME
# Birds Of Paradise
include current-theme.conf
# END_KITTY_THEME
